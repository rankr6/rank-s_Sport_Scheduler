        var token = document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("content");
        function deleteSportSession (id) {
            fetch(`/sportDetail/${id}`,
            {
            method: "delete",
            headers:{ "Content-Type" : "application/json" },
            body: JSON.stringify({
                "_csrf": token
            })
            })
            .then((res) => {
                if(res.ok){
                    window.location.reload();
                }
            })
            .catch((err) => console.error(err));
        }
